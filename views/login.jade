extends layout

block content
  .container
    .row
      .col.s12
        p.flow-text Studies show that one of the most effective ways that students learn is from their peers.
      .col.s12.m6
        h3.center Login
        br
        form(role='form', action="/login",method="post", style='max-width: 300px;')
          .form-group
              input.form-control(type='text', name="username", placeholder='Enter Username')
          .form-group
            input.form-control(type='password', name="password", placeholder='Password')
          button.btn.grey(type='submit') Login
          &nbsp;
          a(href='/')
            button.btn.grey(type="button") Cancel
      .col.s12.m6
        h3.center Signup
        br
        form(role='form', action="/register",method="post", style='max-width: 300px;')
          .form-group
            input.form-control(type='text', name="username", placeholder='Enter Username')
          .form-group
            input.form-control(type='password', name="password", placeholder='Password')
          h5 Are you a Student?
          .switch
            label
              No
              input.form-control(type='checkbox', name="student")
              span.lever
              Yes
          br
          h5 Can you be a mentor?
          .switch
            label
              No
              input.form-control(type='checkbox', name="mentor")
              span.lever
              Yes
          br
          button.btn.grey(type='submit') Signup
